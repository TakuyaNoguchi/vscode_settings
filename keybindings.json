[
  // エディタとターミナルを往復するためのショートカット
  {
    "key": "Ctrl+t",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "Ctrl+t",
    "command": "workbench.action.terminal.focus",
    "when": "editorFocus"
  },
  // Redo
  {
    "key": "Ctrl+Alt+/",
    "command": "redo",
    "when": "editorTextFocus && !editorReadonly"
  },
  // タブの移動
  {
    "key": "Ctrl+Tab",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "Ctrl+Shift+Tab",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "Ctrl+x Ctrl+b",
    "command": "workbench.action.quickOpen",
    "when": "!terminalFocus"
  },
  // 新規ファイルの作成
  {
    "key": "Ctrl+x Ctrl+f",
    "command": "explorer.newFile"
  },
  // 新規フォルダの作成
  {
    "key": "Ctrl+x Ctrl+Alt+f",
    "command": "explorer.newFolder"
  },
  // 補完候補の決定
  {
    "key": "Ctrl+i",
    "command": "acceptSelectedSuggestion",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "Ctrl+o",
    "command": "acceptSelectedSuggestion",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  // ターミナルのキーバインド
  {
    "key": "Ctrl+p",
    "command": "cursorUp",
    "when": "terminalFocus"
  },
  {
    "key": "Ctrl+n",
    "command": "cursorDown",
    "when": "terminalFocus"
  },
  {
    "key": "Ctrl+f",
    "command": "cursorRight",
    "when": "terminalFocus"
  },
  {
    "key": "Ctrl+b",
    "command": "cursorLeft",
    "when": "terminalFocus"
  },
  {
    "key": "Ctrl+a",
    "command": "cursorHome",
    "when": "terminalFocus"
  },
  {
    "key": "Ctrl+e",
    "command": "cursorEnd",
    "when": "terminalFocus"
  },
  {
    "key": "Ctrl+d",
    "command": "deleteRight",
    "when": "terminalFocus"
  },
  {
    "key": "Ctrl+h",
    "command": "deleteLeft",
    "when": "terminalFocus"
  },
  {
    "key": "Ctrl+k",
    "command": "emacs-mcx.killLine",
    "when": "terminalFocus"
  },
  {
    "key": "Ctrl+u",
    "command": "deleteLeft",
    "when": "terminalFocus"
  }
]